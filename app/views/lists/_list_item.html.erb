<li class="list-item <%= index.even? ? "reverse" : "normal" %>">
  <% if item.thumbnail %>
    <%= image_tag item.thumbnail %>
  <% else %>
    <%= image_tag "placeholder.png" %>
  <% end %>
  <div class="list-body">
    <div class="list-header">
      <h3>
      <% if item.title %>
        <%= item.title %>
      <% else %>
        No title found
      <% end %>
      </h3>
      <div class="additional-info">
        <strong>
        <% if item.publishing_date %>
          <%= item.publishing_date %>
        <% else %>
          unknown
        <% end %>
        </strong>
          <em>
            <%= item.author %>
          </em>
      </div>
    </div>
    <div class="list-description">
    <% if item.content %>
      <p>
        <%= truncate(item.content.gsub(/<br>/, " "), length: 300, escape: false) %>
      </p>
    <% end %>
    </div>
    <% if preview %>
      <%= link_to preview_path(google_api_id: item.google_api_id), class: "list-link" do %>
        Preview
      <% end %>
    <% else %>
      <%= link_to list_item_path(current_user.list, item), class: "list-link" do %>
        More info
      <% end %>
    <% end %>
  </div>
</li>