<li class="list-container">
  <% if preview %>
    <div class="add-item">
      <%= simple_form_for new_item, url: list_items_path(current_user) do |f| %>
        <%= f.input :google_api_id, as: :hidden, input_html: { value: item.google_api_id } %>
        <%= f.submit "+", class: "btn-round-small btn-blue disable-input-style", data: { confirm: 'Are you sure you want to add this item to your list?' } %>
      <% end %>
    </div>
    <%= link_to preview_path(google_api_id: item.google_api_id), class: "list-link" do %>
      <%= render partial: "lists/list_item_body", locals: {item: item, index: index} %>
    <% end %>
  <% else %>
  <% if can_edit?(@user) %>
    <div class="up-and-down">
      <div class="position">
        <span>#</span><%= item.position %>
      </div>
      <div class="chevrons">
        <% if item.position == 1 %>
          <div class="disabled">
            <i class="fa fa-chevron-up"></i>
          </div>
        <% else %>
          <div class="up-chevron">
            <%= link_to up_list_item_path(current_user.list, item), method: :patch, remote: :true, class: "btn-text-blue btn-blue-text-hover" do %>
            <i class="fa fa-chevron-up"></i>
            <% end %>
          </div>
        <% end %>
        /
        <% if @items.length == item.position  %>
          <div class="disabled">
            <i class="fa fa-chevron-down"></i>
          </div>
        <% else %>
          <div class="down-chevron">
            <%= link_to down_list_item_path(current_user.list, item), method: :patch, remote: :true, class: "btn-text-blue btn-blue-text-hover" do %>
            <i class="fa fa-chevron-down"></i>
            <% end %>
          </div>
        <% end %>

      </div>
    </div>
    <% end %>
    <%= link_to list_item_path(@user.username, item), class: "list-link" do %>

    <%= render partial: "lists/list_item_body", locals: {item: item, index: index} %>
    <% end %>

  <% end %>
</li>

