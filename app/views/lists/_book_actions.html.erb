<% if can_edit?(@user) %>
  <div class="book-actions">
    <%= link_to list_item_path(current_user, @item), method: :delete, class: "btn-text-gray btn-red-text-hover", data: { confirm: 'Are you sure you want to remove this item from your list?' } do %>
    <i class="fa fa-times"></i>
    <% end %>
    <%= link_to edit_list_item_path(current_user.list, @item), class: "btn-text-gray btn-yellow-text-hover" do %>
    <i class="fa fa-pencil"></i>
    <% end %>
  </div>
<% end %>
