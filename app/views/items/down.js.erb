console.log("I am being rendered down");

$('.list-cards').empty()


<% @items.each_with_index do |item, index| %>
  // Create a paragraph for the new review. But hide it.
  var searchItem = $("<%= j render 'lists/list_item', item: item, index: index, preview: false %>").hide();
  // Add it to the DOM, at the end of the existing reviews. It's still hidden.
  $('.list-cards').append(searchItem);
  // Show the new review with an animation!
  searchItem.slideDown();

<% end %>
