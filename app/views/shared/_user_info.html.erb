<div class="user-info">

  <div class="top">
    <%= image_tag @user.profile_large %>
    <h3>
      <%= @user.full_name %>
      <span>
      <%= link_to edit_user_registration_path(@user), class: "btn-text-gray btn-yellow-text-hover" do %>
      <i class="fa fa-pencil"></i>
      <% end %>
      </span>
    </h3>
  </div>
  <div class="bottom">
    <div class="tags">
      <span>
        #scifi
      </span>
      <span>
        #thriller
      </span>
      <span>
        #lostinspace
      </span>
      <span>
        #romance
      </span>
      <span>
        #adventure
      </span>
    </div>
    <div class="description">
      <p>
        <%= @user.description %>
      </p>
    </div>
  </div>
</div>
